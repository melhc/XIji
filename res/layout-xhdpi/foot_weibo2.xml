<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weibo_foot"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:layout_height="40dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
       android:id="@+id/r_weibo"
        android:background="@drawable/login_tab" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/weibo"
            android:contentDescription="@string/sloid"
            android:src="@drawable/weibo2" />

        <TextView
            android:id="@+id/weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/weibo2"
            android:textColor="@color/theme_color"
            android:textSize="15sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r_qq"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:background="@drawable/login_tab" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/sloid"
            android:src="@drawable/qq" />

        <TextView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/qq"
            android:textColor="@color/theme_color"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>