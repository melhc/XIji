<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp" >

    <TextView
        android:id="@+id/income"
        style="@style/add_item_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        
        android:text="@string/month_income" />

    <TextView
        android:id="@+id/income_sum"
        style="@style/add_item_text"
        android:layout_alignBaseline="@+id/income"
        android:layout_alignBottom="@+id/income"
        android:layout_toRightOf="@+id/income"
        android:text="@string/sum_text2" />

    <TextView
        android:id="@+id/textView1"
        style="@style/add_item_text"
        android:layout_alignBaseline="@+id/income_sum"
        android:layout_alignBottom="@+id/income_sum"
        android:layout_alignLeft="@+id/textView3"
        android:text="@string/rmb" />

    <TextView
        android:id="@+id/Outlay"
        style="@style/add_item_text"
        android:layout_alignLeft="@+id/income"
        android:layout_below="@+id/income"
        android:layout_marginTop="5dp"
        android:text="@string/month_outcome" />

    <TextView
        android:id="@+id/Outlay_sum"
        style="@style/add_item_text"
        android:layout_alignBaseline="@+id/Outlay"
        android:layout_alignBottom="@+id/Outlay"
        android:layout_alignLeft="@+id/income_sum"
        android:text="@string/sum_text2" />

    <TextView
        android:id="@+id/textView2"
        style="@style/add_item_text"
        android:layout_alignBaseline="@+id/Outlay_sum"
        android:layout_alignBottom="@+id/Outlay_sum"
        android:layout_alignLeft="@+id/textView3"
        android:text="@string/rmb" />

    <TextView
        android:id="@+id/budget"
        style="@style/add_item_text"
        android:layout_alignLeft="@+id/Outlay"
        android:layout_below="@+id/Outlay"
        android:layout_marginTop="5dp"
        android:text="@string/account_sum" />

    <TextView
        android:id="@+id/budget_sum"
        style="@style/add_item_text"
        android:layout_alignBaseline="@+id/budget"
        android:layout_alignBottom="@+id/budget"
        android:layout_alignLeft="@+id/Outlay_sum"
        android:text="@string/sum_text2" />

    <TextView
        android:id="@+id/textView3"
        style="@style/add_item_text"
        android:layout_alignBaseline="@+id/budget_sum"
        android:layout_alignBottom="@+id/budget_sum"
        android:layout_marginLeft="140dp"
     
        android:text="@string/rmb" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:text="@string/year"
        android:textColor="#3CB371"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="@string/month"
        android:textColor="#3CB371"
        android:textSize="33sp" />

</RelativeLayout>